doctype html
html
  head
    meta(charset='utf-8')
    title #{ title } - Paris Living Style Guide
    link(href="/stylesheets/lsg.css" type="text/css" rel="stylesheet")
  body.lsg
    header.lsg-header
      a.lsg-nav-toggle
        span.lsg-nav-icon
      a.lsg-header-title(href='/')
        strong Paris
        |  Living Style Guide
      span.lsg-header-version v.#{public._data.version}
      a.lsg-header-dl(href='/dl/styleguide-latest.zip' target="_blank")
        span.lsg-header-dl-icon ⬇
        span.lsg-header-dl-text Télécharger
    nav.lsg-nav
      .lsg-nav-content
        h2 Base
        ul
          - for file, index in public.base._data
            li
              a(href="base/#{index}.html", data-ish="false")
                = file.title
        h2 Layouts
        ul
          - for layout in public.layouts._data.layouts
            li
              a(href="layouts/#{layout}", data-ish="true")
                = layout
        h2 Modules
        ul
          - for module in public.modules._data.modules
            li
              a(href="modules/#{module}", data-ish="true")
                = module
        h2 Composants rédactionnels
        ul
          - for component in public.components._data.components
            li
              a(href="components/#{component}", data-ish="true")
                = component
        h2 Templates
        ul
          - for template in public.templates._data.templates
            li
              a(href="templates/#{template}", data-ish="true")
                = template.replace('.html', '')
    main.lsg-main
      block main
    script(src="/javascript/jquery-2.1.4.min.js")
    script(src="/javascript/lsg.js")
    script(src="/javascript/ish.js")
