mixin video-home-news(data)
  ul.video-home-news
    each item in data.items
      li.video-home-news-item(class=item.modifiers)
        a.video-card(href=item.href target="_blank")
          .video-card-image(style=item.image && "background-image: url(#{item.image})")
            span.video-card-play(class="icon-play")
            span.video-card-duration= item.duration
          .video-card-content
            if item.title
              h3.video-card-title= item.title
            .video-card-text= item.text
