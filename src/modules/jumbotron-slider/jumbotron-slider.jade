include ../button/button

mixin jumbotron-slider(data)
  div.jumbotron-slider(style="background-image: url(#{data.image});" title="#{data.image}" id=data.id class=data.modifiers)
    .jumbotron-slider-wrapper
      .layout-wrapper.jumbotron-slider-content
        .jumbotron-slider-text
          if (data.href)
            a.jumbotron-slider-link(href=data.href)
              strong= data.text
              = "    â€”  "
              span= data.hreftitle
              i.icon-arrow-small-right
          else 
            span= data.text
        if block
          .jumbotron-block
            block
