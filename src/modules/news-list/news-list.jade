include ../news-card/news-card

mixin news-list(opts)
  if opts.modifiers && opts.modifiers.indexOf("news-cards") != -1
    if opts.modifiers.indexOf("large-first-child") != -1
      .news-list(class=opts.modifiers)
        each item, index in opts.items.slice(0, 5)
          if index === 0
            +news-card({
              "modifiers": ["large"],
              "href": item.href,
              "image": item.image,
              "category": item.category,
              "title": item.title,
              "counters": {
                "facebook": 5,
                "twitter": 12
              }
            })
          else
            +news-card(item)
    else
      .news-list.gallery(class=opts.modifiers)
        - console.log(opts.items)
        each item in opts.items
          +news-card(item)
  else
    .news-list.gallery(class=opts.modifiers)
      each item in opts.items
        a.news-item(href=item.href)
          .news-item-meta
            .news-item-date= item.date
            .news-item-category= item.category
          .news-item-title= item.title
          if item.counters
            .social-counters
              .facebook-counter
                span.icon.icon-facebook
                span.counter-value= item.counters.facebook
              .twitter-counter
                span.icon.icon-twitter
                span.counter-value= item.counters.twitter

