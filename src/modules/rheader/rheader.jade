mixin rheader(data)
  header.rheader
    .layout-wrapper.rheader-wrapper
      a.rheader-logo#logo(href=data.logo.href)
        .rheader-logo-nef
        if data.logo.h1
          h1.rheader-logo-paris= data.logo.text
        else
          .rheader-logo-paris= data.logo.text
      ul.rheader-locales
        each locale in data.locales
          li
            a(href=locale.href class=(locale.current ? 'current' : ''))= locale.text
      a.rheader-button.rheader-button-search(href=data.buttons.search.href title=data.buttons.search.title)
      a.rheader-button.rheader-button-around(href=data.buttons.around.href title=data.buttons.around.title)
      a.rheader-button.rheader-button-menu#nav-toggle(href=data.buttons.menu.href)
        span= data.buttons.menu.title
      ul.rheader-nav
        each item in data.items
          li.rheader-nav-item(class=item.modifiers)
            a(href=item.href)
              if item.icon
                i.rheader-nav-item-icon(class="icon-#{item.icon}")
              span.rheader-nav-item-text= item.text
