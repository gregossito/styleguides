include ../block-search/block-search
include ../button/button

mixin block-search-filters-mobile(data)
  - data = JSON.parse(JSON.stringify(data)) // clone the data object
  - data.modifiers = data.modifiers || []
  - data.modifiers.push("block-search-filters-mobile")
  if data.filter_items && data.filter_items.length
    each item in data.filter_items
      - item.modifiers = ["white", "small", "filter"]
      +button(item)
    - data.more.modifiers = ["secondary", "small", "more-filters-button"]
    +button(data.more)