include ../../modules/button/button

mixin video-cover(data)
  .video-cover(style=data.background && "background-image: url(#{data.background})" class=(block || data.block) ? "with-block" : "")
    if block
      != block
    else if data.block
      != data.block
    else
      if data.button
        - data.button.modifiers = ["action"]
        +button(data.button)
