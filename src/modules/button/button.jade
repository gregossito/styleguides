mixin button(data)
  - modifiers = data.modifiers || []
  - attributes = data.attributes || []
  if data.href
    if data.icon
      - modifiers.push("icon")
    a.button(href=data.href title=data.title target=data.target class=modifiers)&attributes(attributes)
      if modifiers && modifiers.indexOf("marker") !== -1
        i.icon.icon-marker
      else if data.icon
        i.icon(class="icon-#{data.icon}")
      span.button-text= data.text
  else
    button.button(class=modifiers)&attributes(attributes)
      = data.text
