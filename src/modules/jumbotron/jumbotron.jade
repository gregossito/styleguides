include ../button/button

mixin jumbotron(data)
  a.jumbotron(href=data.href onclick=data.onclick style="background-image: url(#{data.image});" id=data.id class=data.modifiers)
    .jumbotron-wrapper
      .layout-wrapper.jumbotron-content.layout-outside
        - var tag = data.tag || 'h2'
        #{tag}.jumbotron-title= data.title
        .jumbotron-text= data.text
        if data.button
          - var button = JSON.parse(JSON.stringify(data.button)) // clone the data object
          +button(button)
        if block
          .jumbotron-block
            block
