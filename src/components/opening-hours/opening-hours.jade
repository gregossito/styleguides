include ../../modules/button/button

mixin opening-hours(data)
  .component.component-opening-hours(class=data.modifiers)
    h2= data.title
    p.opening-hours-text= data.text
    table(summary=data.summary)
      if data.caption
        caption= data.caption
      if data.items
        for item in data.items
          tr
            th= item.title
            td= item.text
    ul.opening-hours-buttons
      each button in data.buttons
        - button = JSON.parse(JSON.stringify(button)) // clone the data object
        - button.modifiers = ["action", "secondary", "small"] // overwrite the modifiers
        li
          +button(button)
