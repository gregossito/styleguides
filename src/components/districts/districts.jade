mixin districts(data)
  - var uuid = Math.random().toString(36).substr(2, 5)
  .component.component-districts(role='tablist' aria-multiselectable='true' class=data.modifiers)
    each item, index in data.items
      - var slug = item.slug || uuid + "-" + index
      .districts-item.panel
        div(role='tab' id='h-#{slug}')
          a.districts-item-title(href='##{slug}' aria-controls='##{slug}')
            = item.title
            span.icon.icon-arrow-top
        .districts-item-content(role='tabpanel' aria-labelledby='h-#{slug}' id="#{slug}")
          .districts-content-wrapper
            != item.content

