include ../../modules/button/button

mixin transportation(data)
  .component.component-transportation
    if data.title
      .transportation-title= data.title
    if data.address
      .transportation-address!= data.address
    if data.items
      ul.transportation-items
        each item in data.items
          li.transportation-item
            i.icon(class="icon-#{item.icon}")
            = item.text
    if data.button
      - button = JSON.parse(JSON.stringify(data.button)) // clone the data object
      - button.modifiers = ["marker"] // overwrite the modifiers
      +button(button)
