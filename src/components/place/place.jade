include ../../modules/button/button

mixin place(data)
  .component.component-place
    if data.title
      .place-title= data.title
    if data.address
      .place-address!= data.address
    if data.items
      ul.place-items
        each item in data.items
          li.place-item
            i.icon(class="icon-#{item.icon}")
            = item.text
    if data.button
      - button = JSON.parse(JSON.stringify(data.button)) // clone the data object
      - button.modifiers = ["marker"] // overwrite the modifiers
      +button(button)
