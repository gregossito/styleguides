mixin news-push(opts)
  .news-push
    .actu
      .after
      img(src="#{opts.image.src}" alt="#{opts.image.alt}" title="#{opts.image.title} (#{opts.image.credit})")
      .content
        h3: span= opts.title
        p
          a(href="#{opts.href}")= opts.text
          = " "
          a.next(href="#{opts.href}")= opts.follow
    a.news-push-link(href="#{opts.link.href}")
      span= opts.link.text
