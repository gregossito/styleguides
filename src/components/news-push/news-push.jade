mixin news-push(opts)
  .component.component-news-push
    .news-push-wrapper
      .news-push-after
      - title = [opts.title]
      if opts.image.credit
        - title.push("(" + opts.image.credit + ")")
      img(src=opts.image.src alt=opts.image.alt title=title.join(" "))
      .news-push-content
        h3: span= opts.title
        p
          a(href=opts.href)= opts.text
          = " "
          a.next(href=opts.href)= opts.follow
    a.news-push-link(href=opts.link.href)
      span= opts.link.text
