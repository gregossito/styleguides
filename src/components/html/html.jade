mixin html(data)
  .component.component-html(class=data ? data.modifiers : [])
    .html-wrapper
      if data.cookie === false
        if block
          block
        else if data.block
          != data.block
      else
        if data.placeholder
          .html-placeholder!= data.placeholder
        script.html-embed(type="text/html")
          if block
            != block
          else if data.block
            != data.block
