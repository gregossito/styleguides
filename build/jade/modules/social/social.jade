mixin social(opts)
  .social
    .social-items
      each item in opts.items
        a.social-item(href="#{item.subscribe.url}")
          .social-count
            i.social-icon(class="icon-#{item.icon}")
            = item.count
          .social-link= item.subscribe.text
    if opts.link
      a.social-link(href="#{opts.link.href}")= opts.link.text
