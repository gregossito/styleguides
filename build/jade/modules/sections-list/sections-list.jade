mixin sections-list(data)
  ul.sections-list(class=data.modifiers)
    each item in data.items
      li.sections-list-item
        a.sections-list-button(href=item.href class=item.modifiers)
          .sections-list-button-wrapper
            if (item.title)
              strong.sections-list-button-title= item.title
            .sections-list-button-text!= item.text
