include ../../modules/tags/tags

mixin document-heading(data)
  .document-heading
    .document-heading-background(style=data.image && "background-image:url('#{data.image}')")
    .document-heading-wrapper
      .document-heading-content
        .document-heading-content-wrapper
          h1.document-heading-title!= data.text
          if data.icons
            .document-heading-icons
              each icon in data.icons
                a.icon(class="icon-#{icon.name}" href=icon.href title=icon.title class=icon.modifiers)
          if data.tags
            +tags(data.tags)
