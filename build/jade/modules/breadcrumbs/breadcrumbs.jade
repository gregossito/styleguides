mixin breadcrumbs(data)
  a.offset-header.breadcrumbs-offset-header#breadcrumbs
  ol.breadcrumbs
    each item, index in data.items
      li.breadcrumbs-item
        if item.href
          - var last = (index + 1 === data.items.length)
          a(href=item.href tabindex=(last ? -1 : null))= item.text
        else
          = item.text
