mixin news-card(data)
  a.news-card(href=data.href class=data.modifiers)
    .news-card-wrapper
      .news-card-image(style=data.image && 'background-image: url(#{data.image});')
      .news-card-content
        .news-card-category: span= data.category
        .news-card-title= data.title
        if data.counters
          .news-card-counters
            .news-card-counter.facebook-counter
              i.icon.icon-facebook(aria-hidden="true")
              span.counter-value= data.counters.facebook[0]
              span.counter-label= data.counters.facebook[1]
            .news-card-counter.twitter-counter
              i.icon.icon-twitter(aria-hidden="true")
              span.counter-value= data.counters.twitter[0]
              span.counter-label= data.counters.twitter[1]
