mixin share(data)
  .share(class=data.modifiers)
    if data.items && data.items.length
      ul.share-items
        each item in data.items
          li.share-item
            a(href=item.href onclick=item.onclick title=item.title target="_blank")
              i.share-icon(class="icon-#{item.icon}" aria-hidden="true")
              span.hidden-accessibly= item.text
