include ../news-card/news-card

mixin news-list(data)
  if data.modifiers && data.modifiers.indexOf("news-cards") != -1
    if data.modifiers.indexOf("large-first-child") != -1
      .news-list(class=data.modifiers)
        each item, index in data.items.slice(0, 5)
          if index === 0
            - item = JSON.parse(JSON.stringify(item)) // clone the data object
            - item.modifiers = ["large"] // overwrite the modifiers
            +news-card(item)
          else
            +news-card(item)
    else
      .news-list.gallery(class=data.modifiers)
        each item in data.items
          +news-card(item)
  else
    .news-list.gallery(class=data.modifiers)
      each item in data.items
        a.news-item(href=item.href)
          .news-item-meta
            .news-item-date= item.date
            .news-item-category= item.category
          .news-item-title= item.title
          if item.counters
            .social-counters
              .facebook-counter
                span.icon.icon-facebook
                span.counter-value= item.counters.facebook
              .twitter-counter
                span.icon.icon-twitter
                span.counter-value= item.counters.twitter

