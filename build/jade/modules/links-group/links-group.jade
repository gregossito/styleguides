mixin links-group(opts)
  .links-group(class=opts.modifiers)
    if opts.background
      .links-group-header(style='background-image: url(#{opts.background});')
        .links-group-wrapper-title
          .links-group-title= opts.title
          if opts.subtitle
            .links-group-subtitle= opts.subtitle
    .links-group-content
      each item in opts.items
        a.links-group-button(href=item.href)
          span.links-group-button-text= item.text
          i.links-group-button-icon
