mixin table-of-contents(data)
  .table-of-contents
    if data.nav && data.nav.length
      ul.table-of-contents-nav
        each item in data.nav
          li.table-of-contents-nav-item
            a(href=item.href onclick=item.onclick)
              strong= item.text.slice(0, 3)
              = item.text
    if data.sections
      if data.sections.list && data.sections.list.items && data.sections.list.items.length
        .table-of-contents-sections
          ul.table-of-contents-sections-items
            each item in data.sections.list.items
              li.table-of-contents-sections-item
                a(href=item.href onclick=item.onclick)
                  = item.text
                  strong= item.text.slice(0, 3)
          if data.sections.more
            a.table-of-contents-sections-more(href=data.sections.more.href)
              = data.sections.more.text
