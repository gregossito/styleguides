include ../../modules/button/button

mixin error-heading(data)
  .error-heading(class=data.modifiers)
    .error-heading-wrapper.layout-wrapper(style= data.background ? "background-image: url(#{data.background})" : "")
      a.error-heading-logo#logo(href=data.logo.href)
        .error-heading-logo-nef
        .error-heading-logo-paris= data.logo.text
      .error-heading-content
        if data.title
          h1!= data.title
        if data.button
          +button(data.button)

