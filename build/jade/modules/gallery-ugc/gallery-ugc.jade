mixin gallery-ugc(data)
  .gallery-ugc
    .gallery-ugc-title= data.title + " :"
    each hashtag in data.hashtags
      button.gallery-ugc-hashtag(type="button" title=hashtag.text data-hashtag=hashtag.id class=hashtag.current ? 'current' : null)= hashtag.text
    each hashtag in data.hashtags
      ul.gallery-ugc-content(style=(hashtag.current ? '' : 'display: none;') id="gallery-ugc-#{hashtag.id}")
        each item in hashtag.items
          li.gallery-ugc-item
            a.gallery-ugc-image(href=item.href onclick=item.onclick target="_blank" style="background-image: url(#{item.image});" title=item.title)
              .overlay
                .gallery-ugc-text=item.text
