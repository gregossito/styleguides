include ../../modules/button/button

mixin transportation(opts)
  .component.component-transportation
    if opts.title
      .transportation-title= opts.title
    if opts.address
      .transportation-address!= opts.address
    if opts.items
      ul.transportation-items
        each item in opts.items
          li.transportation-item
            i.icon(class="icon-#{item.icon}")
            = item.text
    if opts.button
      - button = JSON.parse(JSON.stringify(opts.button)) // clone the data object
      - button.modifiers = ["marker"] // overwrite the modifiers
      +button(button)
