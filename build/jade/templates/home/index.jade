extends ../../layouts/stack/stack

include ../../modules/block-content/block-content
include ../../modules/block-content-jecoute/block-content-jecoute
include ../../modules/block-content-newsletter/block-content-newsletter
include ../../modules/block-content-social/block-content-social
include ../../modules/footer/footer
include ../../modules/get-involved/get-involved
include ../../modules/header/header
include ../../modules/heading/heading
include ../../modules/jumbotron/jumbotron
include ../../modules/municipal-team/municipal-team
include ../../modules/news-list/news-list
include ../../modules/notice/notice
include ../../modules/que-faire/que-faire
include ../../modules/quick-access/quick-access
include ../../modules/gallery-ugc/gallery-ugc
include ../../modules/sections-list/sections-list

append content
  +notice(data.notice)
    a(href="#") Visiting Paris ? Plan your trip

append content
  +header(data.header)

append content
  .layout-content
    +quick-access(data.quick_access)

append content
  .layout-content
    .layout-wrapper
      +heading(data.sections.heading)
      +sections-list(data.sections.list)

append content
  .layout-content
    +jumbotron(data.jumbotron)

append content
  .layout-content
    .layout-wrapper
      +heading(data.news.heading)
      +news-list(data.news.list)

append content
  .layout-content.layout-padding-after
    .layout-wrapper
      +que-faire(data.que_faire)

append content
  .layout-content.gray-background
    +get-involved(data.get_involved)

append content
  .layout-right-col
    .layout-wrapper
      .layout-content
        +heading(data.gallery.heading)
        +gallery-ugc(data.gallery.gallery_ugc)
      aside.layout-aside.color-secondary-background
        .blocks-content-vertical
          +block-content-newsletter(data.connected.newsletter)
          +block-content-jecoute(data.connected.jecoute)
          +block-content-social(data.connected.social)

append content
  .layout-content
    +municipal-team(data.municipal_team)

append content
  .layout-content.layout-adjacent-before
    +footer(data.footer)
