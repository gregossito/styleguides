doctype html
html
  head
    meta(charset='utf-8')
    // Always force latest IE rendering engine or request Chrome Frame
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    title Paris Living Style Guide
    link(href="stylesheets/ish.css" type="text/css" rel="stylesheet")
    link(href="stylesheets/lsg.css" type="text/css" rel="stylesheet")
    link(href="stylesheets/styleguide.css" type="text/css" rel="stylesheet")
  body
    nav.lsg-nav
      a.lsg-nav-toggle ☰
      a.lsg-nav-title(href='.')
        strong Paris
        |  Living Style Guide
      .lsg-nav-content
        h2 Base
        ul
          - for base in public.base._contents
            li
              a(href="base/#{base}")
                = base.replace('.html', '')
        h2 Modules
        ul
          - for module in public.modules._data.modules
            li
              a(href="modules/#{module}")
                = module
        h2 Composants rédactionnels
        ul
          - for composant in public.composants._data.composants
            li
              a(href="composants/#{composant}")
                = composant
    header.sg-header(role='banner')
      #sg-controls.sg-controls
        .sg-control-content
          ul.sg-control
            li.sg-size
              .sg-current-size
                form#sg-form
                  | Size
                  input.sg-input.sg-size-px(type='text', value='320')
                  | px /
                  input.sg-input.sg-size-em(type='text', value='20')
                  | em
              ul.sg-acc-panel.sg-size-options
                li.sg-quarter
                  a#sg-size-s(href='#') S
                li.sg-quarter
                  a#sg-size-m(href='#') M
                li.sg-quarter
                  a#sg-size-l(href='#') L
                li.sg-half
                  a#sg-size-full(href='#') Full
                li.sg-half
                  a#sg-size-hay.mode-link(href='#') Grow
    != yield
    script(src="http://code.jquery.com/jquery-2.1.3.min.js")
    script(src="javascript/lsg.js")
    script(src="javascript/ish.js")
