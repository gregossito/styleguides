mixin links-group(opts)
  .links-group
    .links-group-header(class=opts.imgmodifiers style='background-image: url(#{opts.background});')
      .links-group-title= opts.title
      if opts.subtitle
          .links-group-subtitle= opts.subtitle
    .links-group-content
      each item in opts.items
        a(href= item.href class=item.modifiers)
          .links-group-text= item.text
          .links-group-icon



