include ../../components/text/text
include ../../components/buttons/buttons

mixin search-result(opts)
  .search-result
      if opts.result
        +text
          h1= opts.result
      else
        .search-result-separate-page
          p= opts.page
      ul.search-result-items
        each item in opts.items.slice(0, 8)
          li.search-result-item
            a(href=item.href class=item.modifiers)
                = item.title
                p= item.text
      p.search-result-button
        +button({text: "Afficher plus de r√©sultats", modifiers: "wide"})
  
